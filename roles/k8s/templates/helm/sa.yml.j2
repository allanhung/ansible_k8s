apiVersion: v1
kind: ServiceAccount
metadata:
  name: {{ pillar.helm_users.name }}
  namespace: {{ pillar.helm_users.namespace }}
---
apiVersion: rbac.authorization.k8s.io/v1beta1
kind: ClusterRoleBinding
metadata:
  name: {{ pillar.helm_users.name }}
roleRef:
  apiGroup: rbac.authorization.k8s.io
  kind: ClusterRole
  name: {{ pillar.helm_users.role }}
subjects:
- kind: ServiceAccount
  name: {{ pillar.helm_users.name }}
  namespace: {{ pillar.helm_users.namespace }}
